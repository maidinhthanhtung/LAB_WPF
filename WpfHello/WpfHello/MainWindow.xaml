<Window x:Class="WpfHello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHello"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas Margin="0,0,0,1">
        <Button x:Name="button" Content="Set Name" Canvas.Left="120" Canvas.Top="132" Width="75" Click="Button_Click"/>
        <TextBox x:Name="textBox" Height="23" Canvas.Left="285" TextWrapping="Wrap" Canvas.Top="129" Width="146" TextChanged="TextBox_TextChanged"/>
        <Button x:Name="button1" Content="Ret Name" Canvas.Left="120" Canvas.Top="198" Width="75" Click="Button1_Click"/>
        <Label x:Name="label" Content="" Canvas.Left="285" Canvas.Top="200" Width="302" Height="74"/>
        <Button Canvas.Left="10" Canvas.Top="10" Content="Click Me" Height="23" Name="button3" Width="75" Click="button3_Click"/>
        <TextBox Width="170" Canvas.Left="90" Canvas.Top="12" Name="myTextBox" />
    </Canvas>
</Window>
